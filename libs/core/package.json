{
  "name": "@famiglio/core",
  "version": "0.0.1",
  "private": true,
  "description": "@dcdavidev's Famiglio core library",
  "homepage": "https://github.com/dcdavidev/famiglio/blob/main/libs/core#readme",
  "bugs": {
    "url": "https://github.com/dcdavidev/famiglio/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dcdavidev/famiglio.git",
    "directory": "libs/core"
  },
  "license": "MIT",
  "author": {
    "name": "Davide Di Criscito",
    "email": "davidedc@outlook.com",
    "url": "https://github.com/dcdavidev"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.0",
    "pino": "^10.0.0",
    "tslib": "^2.3.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "tsdown": "^0.15.6"
  },
  "nx": {
    "name": "core",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "inputs": [
          "production"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "parallel": false,
          "commands": [
            "tsdown",
            "tsc -p tsconfig.lib.json"
          ]
        }
      },
      "watch": {
        "executor": "nx:run-commands",
        "inputs": [
          "default"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "commands": [
            "tsdown --watch"
          ]
        }
      }
    }
  }
}
