{
  "name": "@famiglio/github",
  "version": "0.0.1",
  "private": true,
  "description": "Core library for the Famiglio GitHub App",
  "homepage": "https://github.com/dcdavidev/famiglio/blob/main/libs/github#readme",
  "bugs": {
    "url": "https://github.com/dcdavidev/famiglio/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dcdavidev/famiglio.git",
    "directory": "libs/github"
  },
  "license": "MIT",
  "author": {
    "name": "Davide Di Criscito",
    "email": "davidedc@outlook.com",
    "url": "https://github.com/dcdavidev"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@famiglio/core": "^0.0.1",
    "@octokit/app": "^16.1.1",
    "@octokit/rest": "^22.0.0",
    "@octokit/webhooks": "^14.1.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "tslib": "^2.3.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.19",
    "tsdown": "^0.15.6"
  },
  "nx": {
    "name": "github",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "inputs": [
          "production"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "parallel": false,
          "commands": [
            "tsdown",
            "tsc -p tsconfig.lib.json"
          ]
        }
      },
      "watch": {
        "executor": "nx:run-commands",
        "inputs": [
          "default"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "commands": [
            "tsdown --watch"
          ]
        }
      }
    }
  }
}
