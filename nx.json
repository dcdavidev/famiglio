{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": ["default"],
    "sharedGlobals": []
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      }
    }
  ],
  "generators": {
    "@nx/plugin:plugin": {
      "compiler": "tsc",
      "e2eTestRunner": "none",
      "unitTestRunner": "none",
      "linter": "none",
      "publishable": false,
      "skipLintChecks": true
    },
    "@nx/plugin:executor": {
      "skipLintChecks": true,
      "unitTestRunner": "none"
    },
    "@nx/plugin:generator": {
      "skipLintChecks": true,
      "unitTestRunner": "none"
    },
    "@nx/js:library": {
      "bundler": "tsc",
      "includeBabelRc": false,
      "linter": "none",
      "minimal": true,
      "publishable": false,
      "strict": true,
      "unitTestRunner": "none"
    },
    "@nx/node:application": {
      "bundler": "none",
      "e2eTestRunner": "none",
      "framework": "none",
      "linter": "none",
      "port": 4000,
      "unitTestRunner": "none"
    },
    "@nx/node:library": {
      "compiler": "tsc",
      "linter": "none",
      "publishable": false,
      "strict": true,
      "unitTestRunner": "none"
    }
  },
  "targetDefaults": {
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist"]
    }
  }
}
